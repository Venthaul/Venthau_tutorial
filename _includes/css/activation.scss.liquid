// This test styling should produce the same navigation panel styling as at 
// https://just-the-docs.github.io/just-the-docs/docs/ui-components/code/

// Currently, the styling in _site/assets/css/just-the-docs-default.css for .nav-list
// is imposing `display: none`.

#site-nav > .nav-list > .nav-list-item:nth-child(3) > .nav-list > .nav-list-item:nth-child(6) > .nav-list-link {
  font-weight: 600;
  text-decoration: none;
  background-image: linear-gradient(
    -90deg,
    rgba($feedback-color, 1) 0%,
    rgba($feedback-color, 0.8) 80%,
    rgba($feedback-color, 0) 100%
  );
}

#site-nav > .nav-list > .nav-list-item:nth-child(3) > .nav-list-expander svg,
#site-nav > .nav-list > .nav-list-item:nth-child(3) > .nav-list > .nav-list-item:nth-child(6) > .nav-list-expander svg {
  @if $nav-list-expander-right {
    transform: rotate(-90deg);
  } @else {
    transform: rotate(90deg);
  }
}

#site-nav > .nav-list > .nav-list-item:nth-child(3) > .nav-list,
#site-nav > .nav-list > .nav-list-item:nth-child(3) > .nav-list > .nav-list-item:nth-child(6) > .nav-list {
  display: block !important;
}
