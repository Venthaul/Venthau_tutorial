{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    // Override the default shell (https://stackoverflow.com/questions/54810355/how-to-run-task-in-another-terminal-with-vscode-integrated-terminal)
    "windows": {
        "options": {
            "shell": {
                "executable": "wsl.exe"
            }
        }
    },
    "tasks": [
        // Git Helpers
        {
            "label": "Git: Refresh Code & Create New Branch",
            "type": "shell",
            "command": "git fetch origin && git checkout trunk && git pull && git checkout -b ${input:branchName}",
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "label": "Git: Save Changes & Push Current Branch",
            "type": "shell",
            "command": "git push -u origin $(git branch --show-current)",
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        // Jekyll Documentation
        {
            "label": "Jekyll: Start Site Locally",
            "type": "shell",
            "command": "bundle install && JEKYLL_ENV=testing jekyll build && JEKYLL_ENV=testing bundle exec jekyll serve --livereload",
            "group": {
            "kind": "build",
            "isDefault": true
            }
        },
        {
            "label": "Jekyll: Force Start Site Locally",
            "type": "shell",
            "command": "sudo gem install bundler && sudo bundle install && JEKYLL_ENV=testing jekyll build && JEKYLL_ENV=testing bundle exec jekyll serve --livereload",
            "group": {
            "kind": "build",
            "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "branchName",
            "description": "Branch Name:",
            "type": "promptString"
        }
    ]
}
